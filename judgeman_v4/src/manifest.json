{
  "manifest_version": 3,
  "name": "Judgeman v4",
  "version": "4.0.0",
  "description": "Readable ELIT judgments + case facts rundown + diagram (BYOK).",
  "action": {
    "default_title": "Judgeman",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.elitigation.sg/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.elitigation.sg/*"
      ],
      "js": ["contentScript.js"],
      "css": ["panel.css"],
      "run_at": "document_idle"
    }
  ]
}
